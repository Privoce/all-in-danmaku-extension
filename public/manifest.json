{
  "name": "All In Danmaku",
  "version": "0.1.0",
  "description": "Turn all danmaku together!",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "activeTab"
  ],
  "icons": {
    "16": "images/icon.png",
    "32": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "images/icon.png",
      "32": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
    }
  },
  "background": {
    "service_worker": "static/js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://*.qmcurtis.me/*"],
      "css": ["static/css/content.css"],
      "js": ["static/js/content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": ["insert.js"]
}
